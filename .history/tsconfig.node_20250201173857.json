{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "isolatedModules": false,
    "types": ["node", "electron"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/main.js", "src/main/**/*.js", "src/preload.ts"]
} 